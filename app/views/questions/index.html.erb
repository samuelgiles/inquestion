<% content_for :head do %>
  <title>inquestion - Questions - <%= @sort_title %></title>
<% end %>
<div class="row">
	<div class="col6">
		
		<div class="col-element answer has-jumbo-input">
			<input class="jumbo-input" placeholder="Search by tag" type="text" />
		</div>

		<div class="col-element has-header">
			
			<h3>#unit22</h3>
			<p>22 Questions - Popular Questions:</p>

			<ul class="question_list">
				<li class="question">
					<div class="question-top">
						<a class="question-votes" href="#">+53</a><h3><a href="#">What does SMB stand for?</a></h3>
					</div>
				</li>
			</ul>

		</div>

		<div class="col-element has-header">
			
			<h3>#unit22</h3>
			<p>22 Questions - Popular Questions:</p>

			<ul class="question_list">
				<li class="question">
					<div class="question-top">
						<a class="question-votes" href="#">+53</a><h3><a href="#">What does SMB stand for?</a></h3>
					</div>
				</li>
				<li class="question">
					<div class="question-top">
						<a class="question-votes" href="#">+53</a><h3><a href="#">What does SMB stand for?</a></h3>
					</div>
				</li>
			</ul>

		</div>

	</div>
	<div class="col6">
		<div class="col-element has-header answer has-option">
			<h2><%= @sort_title %></h2>
			<a href="#" class="header_option" data-sort-menu="#question-menu"><%= @sort_title.sub! " Questions", "" %> <i class="icon icon-arrow-down"></i></a>
			<ul class="sortmenu" id="question-menu">
				<li><a href="?popular=1">Popular</a></li>
				<li><a href="?new=1">New</a></li>
				<li><a href="?answered=1">Answered</a></li>
			</ul>
			
			<% if @questions.length > 0 %>
				<ul class="question_list">
					
					<% @questions.each do |q| %>
					<li class="question">
						<div class="question-top">
							<a class="question-votes" href="#">+<%=q.votes.count %></a><h3><%= link_to q.title, q %></h3>
						</div>
						<p><%= q.content %></p>
						<div class="question-bottom">
							<ul class="question-tags">
								<% q.tags.each do |qt| %>
								<li><%= link_to "#" + qt.title, qt %></li>
								<% end %>
							</ul>
							<span>- asked by <a href="#">Samuel Giles</a></span>
						</div>
					</li>
					<% end %>

				</ul>
			<% else %>
			
				<p>Unfortunately there don't appear to be any <%= @sort_title.downcase %> questions. Bummer.</p>

			<% end %>
		</div>
	</div>
</div>


