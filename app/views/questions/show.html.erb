<% content_for :opengraph do %>
<meta property="og:title" content="<%= @question.title %>" />
<meta property="og:type" content="article" />
<meta property="og:description" content="<%= truncate(@question.content, length: 297) %>" />
<meta name="twitter:card" content="summary">
<meta name="twitter:title" content="<%= @question.title %>">
<meta name="twitter:description" content="<%= truncate(@question.content, length: 297) %>">
<meta name="twitter:image" content="<%= request.protocol + request.host_with_port + image_path("icon-large.png") %>">
<meta name="twitter:site" content="https://twitter.com/inquestionhq">
<% end %>
<div class="col6">

	<div class="col-element has-header ask has-seperator single-question question">
		<h2 class="no-theme"><%= @question.title %></h2>
		<p class="sub-header">asked by <%= (@question.user.forename + " " + @question.user.surname) %> at <%= @question.created_at.strftime("%H:%M on #{@question.created_at.day.ordinalize} %B %Y ")  %></p>
		
		<p><%= @question.content %></p>
		
		<p class="question-votes-detail">
			<%= pluralize(@question.votes.count, 'vote') %> 
			<a href="#" class="btn ask">Click here to vote for this question <%= @question.answered ? " to be answered" : "" %></a>
		</p>

		<ul class="question-tags">
			<% @question.tags.each do |t| %>
				<li><a href="#">#<%= t.title %></a></li>
			<% end %>
		</ul>

	</div>

</div>
<div class="col6">
	
	<div class="col-element answer has-header">
		<h2>Answer this Question</h2>
		<%= form_for [@question, @newAnswer] do |f| %>

			<%= render "answers/answer_fields", :f => f %>
			<%= f.submit :class => "answer", :value => "Submit Answer" %>

		<% end %>
	</div>

	<div class="col-element answer has-seperator">
		<h2>Answers</h2>
		
		<% if @question.answers.count == 0 %>
		<p>Nobody has answered this question</p>
		<% else %>
			
			<ul class="answers">
			<% @question.answers.each do |a| %>
				<% if a.content != nil %>
					<li class="answer <%= a == @question.accepted_answer ? "accepted" : "" %>">
						<% if a == @question.accepted_answer %>
						<h2>ACCEPTED ANSWER</h2>
						<% end %>
						<a class="answer-votes" href="#">+<%= a.votecount %></a>
						<p><%= a.content %></p>
						<a href="#" class="answer-author">by <cite><%= a.user.forename + " " + a.user.surname %></cite></a>
					</li>	
				<% end %>
			<% end %>
			</ul>

		<% end %>
	</div>

</div>


