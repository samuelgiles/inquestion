<%= render layout: '/layouts/admin' do %>
	<div id="admin-users-index" class="col-element has-header ask">
		<h2 class="">Admin - View User</h2>
		<h3>Assessor:</h3>
			
		<%= form_tag('/admin/users', method: :get, :authenticity_token => false, class: "form") do %>
			<div class="form-control">
			<%= select_tag(:assessor_id, options_for_select(@assessor_options, params[:assessor_id])) %>
			</div>
		<% end %>
			
		</form>

		<% if @apprentices.count > 0 %>
		<table>
			<thead>
				<tr>
					<th>Name</th><th>Email</th><th>End Date</th><th>&nbsp;</th>
				</tr>
			</thead>
			<tbody>
				<% @apprentices.each do |apprentice| %>
				<tr>
					<td><%= apprentice.full_name %></td>
					<td><%= apprentice.email %></td>
					<td><%= apprentice.friendly_start_date %></td>
					<td><%= link_to "View", user_path(apprentice), class: "btn btn-block btn-small" %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
		<% else %>
		<p><i>No users found with the applied filter</i></p>
		<% end %>
	</div>
	
<% end %>